process {

     queue='pr-el7,short-sl7'
     cpus='4'
     time='1h'
     scratch = false
     errorStrategy = 'ignore'

     withLabel: thermoconvert {
        memory = '10G'
        container = 'quay.io/biocontainers/thermorawfileparser:1.2.3--1'
     }

     withLabel: openms {
        memory = '10G'
        container = 'openms/executables:latest'
        clusterOptions = '-l h_rt=120:00:00'
     }

}

profiles {
	test_lb { includeConfig 'conf/test_lb.config' }
        test_mq { includeConfig 'conf/test_mq.config' }
        test_ms { includeConfig 'conf/test_ms.config' } 
}

workDir = "$baseDir/work"
includeConfig "conf/params.config"
includeConfig "conf/openms.config"
singularity.cacheDir = "$baseDir/singularity"
singularity.enabled = true
